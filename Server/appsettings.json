{
  "AllowedHosts": "*",

  "Serilog": {
    "Using":  [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "@mt = 'An unhandled exception has occurred while executing the request.'"
        }
      }
    ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": { "path":  "./Logs/log-.txt", "rollingInterval": "Day" }
      }
    ]
  },

  "Kestrel": {
    "Endpoints": {
      "BaseServer": {
        "Url": "http://0.0.0.0:5000"
      },
      "AmAuthServer": {
        "Url": "http://0.0.0.0:80"
      },
      "Listen": {
        "Url":"https://0.0.0.0:443" 
      },
      "MuchaServer": {
        "Url": "https://0.0.0.0:10122"
      }
    },
    "Certificates": {
      "Default": {
        "Path": "Certificates/cert.pfx",
        "Password": "",
        "AllowInvalid": true
      }
    }
  },
  "CardServerConfig": {
    "IgnoreUploadSaving": false,
    "GameConfigurations": {
      "OfflineBaseWinPoint": 2,
      "OfflineBaseLosePoint": -1,
      "OfflineLoseResultBonus": 1,
      "CasualBaseWinPoint": 2,
      "CasualBaseLosePoint": -1,
      "CasualLoseResultBonus": 1,
      "TrainingMinutes": 12,
      "BattleSeconds": 230,
      "PvPDamageLevel": 2
    }
  }
}
